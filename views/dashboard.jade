extends layout

block scripts
  script(src='static/js/client.js')
  script(src='static/js/vendor/socket.io.js')
  script(src='static/js/vendor/moment.min.js')

block nav
  ul.nav.navbar-nav
    li.active
      a(href='/') Dashboard
    li
      a(href=configStrings.links.bugreport) Report issue


block body
    div.row.forecast
        div.upcoming-shifts
            div.number ?
            div.description Engel der nächsten drei Stunden
        div.upcoming-night-shifts
            div.number ?
            div.description Engel für Nachtschicht
        div.currently-working
            div.number ?
            div.description Arbeitende Engel
        div.hours-worked
            div.number.info ?
            div.description Zu arbeitende Stunden
    div.row
        section.job-list
            h1.header-jobs-running Currently running
            div.jobs-running
        section.job-list
            h1.header-jobs-now Within the next hour
            div.jobs-now
            h1.header-jobs-soon Within the next 3 hours
            div.jobs-soon
        section.talks
            div.clock.well ??:??:??
            h1 Current Talks
            ul.current-talks-list
            h1 Next Talks
            ul.next-talks-list
        section.next-talks
        section.news
